<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LayoutExample.GridLayoutEx">
	<ContentPage.Content>

        <Grid BackgroundColor="Yellow" RowSpacing="2" ColumnSpacing="2">
            <Label Grid.Row="0" Grid.Column="0" Text="Label1" BackgroundColor="Green"/>
            <Label Grid.Row="0" Grid.Column="1" Text="Label2" BackgroundColor="Green"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Label3" BackgroundColor="Green"/>
            <Label Grid.Row="1" Grid.Column="1" Text="Label4" BackgroundColor="Green"/>
            <Label Grid.Row="2" Grid.ColumnSpan="2" Text="ColumnSpan" BackgroundColor="Navy"/>
            <Label Grid.RowSpan="3" Grid.Column="2" Text="RowSpan" BackgroundColor="Maroon"/>
        </Grid>
        
	</ContentPage.Content>
</ContentPage>
