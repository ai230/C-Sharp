<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="LayoutExample.GridLayout2"
    BackgroundColor="#127ac7"
    Padding="10">
	

        
	<Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Grid.Column="0" 
             VerticalOptions="Center" Orientation="Vertical">
            <Label HorizontalOptions="Center" 
                Text="Welcome to Xamarin" TextColor="White" FontSize="30" FontAttributes="Bold"/>
            <Label HorizontalOptions="Center" 
                Text="Cross-platform apps made easy" TextColor="White" FontSize="18"/>
        </StackLayout>


        <Button Grid.Row="1" Grid.Column="0" BackgroundColor="#1dabf0" Text="Login" TextColor="White"/>
        <Button Grid.Row="2" Grid.Column="0" BackgroundColor="#1dabf0" Text="Register" TextColor="White"/>

    </Grid>
</ContentPage>
